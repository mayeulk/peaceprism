// script de creation de l'objet slider
   
	var sliderDate = new Control.Slider('handle_date_debut','track_date',
		{range:$R(<%= @debut_periode %>, <%= @fin_periode %>),
		values:<%= (@debut_periode..@fin_periode).to_json %>, 
