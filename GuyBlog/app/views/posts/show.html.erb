<p>
  <b>Title:</b>
  <%=h @post.title %>
</p>

<p>
  <b>Body:</b>
  <%=h @post.body %>
</p>

<!-- completer la vue de show de post en ajoutant les commentaires -->
<% unless @post.comment.empty? %>
  <h3>Commentaires</h3>
    <% @post.comments.each do |comment|%>
    <p><%= h comment.body %></p>
    <% end %>
<% end %>
    



<%= link_to 'Comments', post_comments_path(@post) %>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Liste des posts', posts_path %>
